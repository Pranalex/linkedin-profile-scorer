# LinkedIn Profile Scorer Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_DB=linkedin_profiles
POSTGRES_USER=linkedin_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
WEBHOOK_URL=http://localhost:5680/
GENERIC_TIMEZONE=Europe/Paris
N8N_LOG_LEVEL=info

# Database Schema
DB_POSTGRESDB_SCHEMA=n8n_core

# JWT Configuration
N8N_JWT_SESSION_DURATION=604800
N8N_JWT_REFRESH_TIMEOUT=259200
N8N_JWT_AUTH_HEADER=authorization
N8N_JWT_ALGORITHM=HS256

# Session Configuration
N8N_SESSION_TIMEOUT=604800
N8N_SECURE_COOKIE=false
N8N_COOKIES_SECURE=false

# Editor Configuration
N8N_EDITOR_BASE_URL=http://localhost:5680
N8N_USER_MANAGEMENT_DISABLED=true
N8N_DISABLE_UI=false

# Database Configuration (SQLite for n8n internal)
N8N_DATABASE_TYPE=sqlite
N8N_DATABASE_SQLITE_FILE=/tmp/n8n.sqlite
N8N_RESET_DATABASE=true

# Binary Data Configuration
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=60
N8N_BINARY_DATA_S3_REGION=us-east-1

# API Keys (for AI services - used in n8n workflow)
# Get these from respective AI service providers
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Port Configuration (modify if you have port conflicts)
POSTGRES_EXTERNAL_PORT=5434
N8N_EXTERNAL_PORT=5680
WEB_DEMO_EXTERNAL_PORT=8082

# Network Configuration
SUBNET=172.22.0.0/16